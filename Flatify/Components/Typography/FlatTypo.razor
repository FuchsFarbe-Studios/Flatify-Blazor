@namespace Flatify
@inherits FlatComponentBase

@switch (Typo)
{
	case Typo.Default:
		<p class="@Classname">
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</p>
		break;
	case Typo.Heading1:
		<h1 class="@Classname">
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</h1>
		break;
	case Typo.Heading2:
		<h2 class="@Classname">
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</h2>
		break;
	case Typo.Heading3:
		<h3 class="@Classname">
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</h3>
		break;
	case Typo.Heading4:
		<h4 class="@Classname">
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</h4>
		break;
	case Typo.Heading5:
		<h5 class="@Classname">
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</h5>
		break;
	case Typo.Heading6:
		<h6 class="@Classname">
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</h6>
		break;
	case Typo.Subtitle1:
		<h5 class="@Classname" style=@("font-family: 'Anonymous Pro'")>
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</h5>
		break;
	case Typo.Subtitle2:
		<h6 class="@Classname" style=@("font-family: 'Anonymous Pro'")>
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</h6>
		break;
	case Typo.Body1:
		goto case Typo.Default;
	case Typo.Body2:
		goto case Typo.Default;
	case Typo.Button:
		<span class="@Classname" style=@("font-variant: small-caps")>
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</span>
		break;
	case Typo.Caption:
		<caption class="@Classname">
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</caption>
		break;
	case Typo.Overline:
		<span class="@Classname" style=@("baseline-shift: baseline")>
			@if (!string.IsNullOrWhiteSpace(Text))
			{
				@Text
			}
			@if (ChildContent is not null)
			{
				@ChildContent
			}
		</span>
		break;
	default:
		goto case Typo.Default;
}