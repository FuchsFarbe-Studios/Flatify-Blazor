@namespace Flatify.Forms
@inherits FlatFormComponentBase<TData>
@typeparam TData

<div class="@ContainerClassname">
	<input class="@InputClassname" @onblur="@OnBlur" @bind="@CurrentValue" id="@FieldIdentifier.FieldName" name="@FieldIdentifier.FieldName" required="@Required" type="@GetInputType(Value)" placeholder="@Placeholder" disabled="@Disabled" />
	<label class="@LabelClassname" for="@FieldIdentifier.FieldName">@Label</label>
</div>
@if (!string.IsNullOrEmpty(HelpText))
{
	<p class="help-text size-sm">@HelpText</p>
}