@namespace Flatify.Forms
@inherits FlatFormComponentBase<TData>
@typeparam TData

@if (!Floating && !Inline)
{
	<label class="@LabelClassname" for="@FieldIdentifier.FieldName">@Label</label>
	<input class="@InputClassname" @bind="@CurrentValue" id="@FieldIdentifier.FieldName" name="@FieldIdentifier.FieldName" required="@Required" type="@GetInputType(Value)" placeholder="@Placeholder" disabled="@Disabled" />
	<FlatTypo Typo="Typo.Caption" Text="@HelpText" />
}
@if (!Floating && Inline)
{
	<label class="@LabelClassname" for="@FieldIdentifier.FieldName">@Label</label>
	<input class="@InputClassname" @bind="@CurrentValue" id="@FieldIdentifier.FieldName" name="@FieldIdentifier.FieldName" required="@Required" type="@GetInputType(Value)" placeholder="@Placeholder" disabled="@Disabled" />
	<FlatTypo Typo="Typo.Caption" Text="@HelpText" />
}
@if (Floating && !Inline)
{
	<FlatFormField Class="@ContainerClassname">
		<ChildContent>
			<input class="@InputClassname" @bind="@CurrentValue" id="@FieldIdentifier.FieldName" name="@FieldIdentifier.FieldName" required="@Required" type="@GetInputType(Value)" placeholder="@Placeholder" disabled="@Disabled" />
			<label class="@LabelClassname" for="@FieldIdentifier.FieldName">@Label</label>
		</ChildContent>
		<HelpContent>
			<FlatTypo Typo="Typo.Caption" Text="@HelpText" />
		</HelpContent>
	</FlatFormField>
}