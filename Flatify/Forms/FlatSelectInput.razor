@namespace Flatify.Forms
@inherits FlatFormComponentBase<TValue>
@typeparam TValue

@if (!Floating && !Inline)
{
	<label class="@LabelClassname" for="@FieldIdentifier.FieldName">@Label</label>
	<select name="@FieldIdentifier.FieldName" id="@FieldIdentifier.FieldName" class="@InputClassname" @bind="@CurrentValue" placeholder="@floatingPlaceholder">
		<CascadingValue Value="this" IsFixed="true">
			@ChildContent
		</CascadingValue>
	</select>
	<FlatTypo Typo="Typo.Caption" Text="@HelpText" />
}
@if (!Floating && Inline)
{
	<label class="@LabelClassname" for="@FieldIdentifier.FieldName">@Label</label>
	<select name="@FieldIdentifier.FieldName" id="@FieldIdentifier.FieldName" class="@InputClassname" @bind="@CurrentValue" placeholder="@floatingPlaceholder">
		<CascadingValue Value="this" IsFixed="true">
			@ChildContent
		</CascadingValue>
	</select>
	<FlatTypo Typo="Typo.Caption" Text="@HelpText" />
}
@if (Floating && !Inline)
{
	<FlatFormField Class="@ContainerClassname">
		<ChildContent>
			<select name="@FieldIdentifier.FieldName" id="@FieldIdentifier.FieldName" class="@InputClassname" @bind="@CurrentValue" placeholder="@floatingPlaceholder">
				<CascadingValue Value="this" IsFixed="true">
					@ChildContent
				</CascadingValue>
			</select>
			<label class="@LabelClassname" for="@FieldIdentifier.FieldName">@Label</label>
		</ChildContent>
		<HelpContent>
			<FlatTypo Typo="Typo.Caption" Text="@HelpText" />
		</HelpContent>
	</FlatFormField>
}