@namespace Flatify.Forms
@inherits FlatFormComponentBase<TValue>
@typeparam TValue

<label class="@LabelClassname" for="@FieldIdentifier.FieldName">@Label</label>
<select name="@FieldIdentifier.FieldName" id="@FieldIdentifier.FieldName" class="@InputClassname" @bind="@CurrentValue">
	<CascadingValue Value="this" IsFixed="true">
		@ChildContent
	</CascadingValue>
</select>