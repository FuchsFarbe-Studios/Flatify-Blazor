@namespace Flatify.Forms
@using Flatify.Utilities
@inherits FlatInputBase<string>

<FlatField Class="@CssClass" Floating="@Floating" IsArea="@isArea" @attributes="@UserAttributes">
	@if (!Floating)
	{
		<label name="@Id" class="@LabelClassname" for="@Id">@Label</label>
	}
	@if (!isArea)
	{
		<input type="@(InputMode.ToDescriptionString())" @bind="@CurrentValueAsString" placeholder="@inputPlaceholder" @attributes="@UserAttributes" id="@Id" maxlength="@MaxLength" required="@Required" readonly="@ReadOnly" class="@InputClassname" disabled="@Disabled" name="@Id" />
	}
	else
	{
		<textarea class="@InputClassname" type="@(InputMode.ToDescriptionString())" @bind="@CurrentValueAsString" placeholder="@inputPlaceholder" @attributes="@UserAttributes" id="@Id" rows="@LineCount" maxlength="@MaxLength" required="@Required" name="@Id" readonly="@ReadOnly" disabled="@Disabled" />

	}
	@if (Floating)
	{
		<label name="@Id" class="@LabelClassname" for="@Id">@Label</label>
	}
</FlatField>