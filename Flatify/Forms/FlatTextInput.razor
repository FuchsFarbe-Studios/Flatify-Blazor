@namespace Flatify.Forms
@using Flatify.Utilities
@inherits FlatFormComponentBase<string>

<div class="@ContainerClassname">
	<input class="@InputClassname" @bind="@CurrentValueAsString" @onblur="@OnBlur" id="@FieldIdentifier.FieldName" name="@FieldIdentifier.FieldName" required="@Required" type="@InputType.ToDescriptionString()" placeholder="@floatingPlaceholder" disabled="@Disabled" />
	<label class="@LabelClassname" for="@FieldIdentifier.FieldName">@Label</label>
	@if (!string.IsNullOrEmpty(HelpText))
	{
		<p class="help-text size-sm">@HelpText</p>
	}
</div>